generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String   @id @default(cuid())
  operationId   String
  name          String
  date          DateTime
  postingNumber String
  sku           String
  price         Float

  @@unique([name, operationId])
}

model Order {
  id            String   @id @default(cuid())
  product       String
  orderId       String
  orderNumber   String
  postingNumber String
  status        String
  createdAt     DateTime
  inProcessAt   DateTime
  sku           String
  oldPrice      Int
  price         Int
  currencyCode  String

  @@unique([postingNumber])
}
