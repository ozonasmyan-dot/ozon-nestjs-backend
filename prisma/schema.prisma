generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String   @id @default(cuid())
  operationId   String
  name          String
  date          DateTime
  postingNumber String
  sku           String
  price         Float

  @@unique([name, operationId])
}

model Order {
  id            String   @id @default(cuid())
  product       String
  orderId       String
  orderNumber   String
  postingNumber String
  status        String
  createdAt     DateTime
  inProcessAt   DateTime
  sku           String
  oldPrice      Int
  price         Int
  currencyCode  String

  @@unique([postingNumber])
}

model Advertising {
  id             String   @id @default(uuid())
  campaignId     String
  sku            String
  product        String
  date           String
  type           String
  clicks         Int
  toCart         Int
  avgBid         Float
  competitiveBid Float
  minBidCpo      Float
  minBidCpoTop   Float
  moneySpent     Float
  weeklyBudget   Float
  createdAt      DateTime @default(now())

  @@unique([campaignId, sku, date, type])
}
