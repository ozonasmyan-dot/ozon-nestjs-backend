generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                   String   @id @default(cuid())
  operationType        String
  operationTypeName    String
  operationServiceName String
  date                 DateTime
  type                 String
  postingNumber        String
  price                Float

  @@unique([operationServiceName, postingNumber])
}

model Order {
  id            String   @id @default(cuid())
  product       String
  orderId       String
  orderNumber   String
  postingNumber String
  status        String
  createdAt     DateTime
  inProcessAt   DateTime
  sku           String
  oldPrice      Int
  price         Int
  currencyCode  String

  @@unique([postingNumber])
}
